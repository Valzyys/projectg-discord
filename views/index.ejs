<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discord Login System</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background-color: #36393f;
      color: #dcddde;
    }
    .discord-button {
      background-color: #5865F2;
      transition: background-color 0.2s;
    }
    .discord-button:hover {
      background-color: #4752c4;
    }
  </style>
</head>
<body>
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg max-w-md w-full">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Welcome to DiscordConnect</h1>
        <p class="text-gray-400">Sign in with your Discord account to view your servers and friends.</p>
      </div>
      
      <div class="space-y-4">
        <% if (!user) { %>
          <a href="/auth/discord" class="discord-button flex items-center justify-center gap-3 text-white py-3 px-4 rounded-md w-full font-medium">
            <i class="fab fa-discord text-xl"></i>
            Sign in with Discord
          </a>
        <% } else { %>
          <div class="text-center">
            <p class="mb-4">You are logged in as <%= user.username %></p>
            <a href="/dashboard" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md inline-block mb-2">
              Go to Dashboard
            </a>
            <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-md inline-block ml-2">
              Logout
            </a>
          </div>
        <% } %>
      </div>
      
      <div class="mt-8 text-center text-sm text-gray-500">
        <p>This application requests access to view your Discord profile, servers, and friends list.</p>
      </div>
    </div>
  </div>
</body>
</html>
